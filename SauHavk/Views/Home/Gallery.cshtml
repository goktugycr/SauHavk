@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="py-5" style="background: linear-gradient(to bottom, #1e3c72, #2a5298); color: white; margin-bottom: 50px;">
    <div class="container">
        <h2 class="text-center mb-5" style="font-size: 2.5rem; font-weight: bold; text-shadow: 1px 1px 5px rgba(0,0,0,0.5);">
            Galeri
        </h2>
        <div class="row g-4">
            @for (int i = 1; i <= 12; i++)
            {
                <div class="col-md-4 col-sm-6">
                    <div class="card border-0 shadow-sm">
                        <img src="@($"~/images/gallery/photo-{i}.png")" class="card-img-top img-fluid rounded" alt="Galeri Resmi @i">
                    </div>
                </div>
            }
        </div>
    </div>
</section>
